{% extends '::base.html.twig' %}

{% form_theme edit_form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}

            {% for error in errors %}
                <div class="label label-danger">{{ error.message }}</div>
            {% endfor %}
        
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block form_row %}
    
    <div class="form-group">
		<div class="row">	
			
			<div class="col-md-12">{{ form_label(form) }}</div>
			<div class="col-md-8">{{ form_widget(form, {'attr': {'class':'form-control input-sm'}} ) }}</div>
			<div class="col-md-4">{{ form_errors(form) }}</div>
			
		</div>
    </div>
    
{% endblock form_row %}

{% block javascripts %}

	<script type="text/javascript">
	
		$(document).ready(function(){
		
		});
	
	</script>

{% endblock %}


{% block body -%}

    <div class="page-header"><h1>Role <small>edit</small></h1></div>

    <form action="{{ path('role_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-success" type="submit">Update</button>
        </p>
    </form>


	<div class="col-md-12">	
			<br><br>
			
			<div class="col-md-1">	
			
				<button class="btn btn-danger" onclick="confirm_redirect('{{ path('role_delete', { 'id': entity.id }) }}','Are you sure?')" >Delete</button>
			
			</div>
			<button class="btn btn-info" onclick="window.location.href='{{ path('role') }}'">Back</button>
			
		
	</div>


{% endblock %}
