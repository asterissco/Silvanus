{% extends '::base.html.twig' %}

{% form_theme filter_form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}

            {% for error in errors %}
                <div class="label label-danger">{{ error.message }}</div>
            {% endfor %}
        
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block form_row %}
    
    <div class="form-group">
				
			<div class="col-md-3">{{ form_label(form) }}</div>
			<div class="col-md-6">{{ form_widget(form, {'attr': {'class':'form-control input-sm'}} ) }}</div>
			<div class="col-md-3">{{ form_errors(form) }}</div>	
		
    </div>
    
{% endblock form_row %}

{% block javascripts %}

	<script type="text/javascript">
	
		$(document).ready(function(){
		
		
		});
	
	</script>

{% endblock %}

{% block body -%}


    <div class="page-header"><h1>Firewall <small>rule list chain: </small> | {{ chain_entity.name }}</h1></div>

		<legend>Filter</legend>
		
			
			<form name="filter_form" {{ form_enctype(filter_form) }} action="{{ path('firewallrules', {'id_chain':id_chain} ) }}" method="POST" class="form-horizontal"> 

				<div class="row">

					<div class="col-md-6">
					
						{{ form_row(filter_form.sort_by) }}
						{{ form_row(filter_form.sort_direction) }}
						{{ form_row(filter_form.sync_error) }} 
						
				
					</div>
					
					<div class="col-md-6">					
					
						{{ form_row(filter_form.rule) }}
						
						<button  class="btn btn-success" type="submit">Filter</button>
						
					</div>					
				
				</div>
				
			</form>
		
	<br><br>
	
	<legend>List</legend>
    <table class="table">
        <thead>
            <tr>
                
                <th>Priority</th>
                <th>Rule</th>
                <th>Sync Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        
        {# entities record #}
        
        {% for entity in entities %}
            
			
				<tr>
					<td>{{ entity.priority }}</td>
					<td>{{ entity.rule }}</td>
					<td>

						{% if entity.syncError == false %}
							<button class="btn btn-success">NO ERRORS</button>
						{% endif %}
						{% if entity.syncError == true %}
							
							{% set error = '' %}
							
							{% for errorMessage in entity.syncErrorMessage %}
						
								{% set error = error ~ errorMessage ~ "<br>" %}
						
							{% endfor %}
						
							<button class="btn btn-danger" onclick='bootbox.alert("{{ error }}")'>ERRORS FOUND</button>
							
							
							
						{% endif %}

					
					</td>
					<td>
					
							{# <button class="btn btn-info" onclick="window.location.href='{{ path('firewallrules_show', { 'id': entity.id }) }}'">Show</button> #}
							<button class="btn btn-warning"  onclick="window.location.href='{{ path('firewallrules_edit', { 'id': entity.id, 'id_chain': id_chain }) }}'">Edit</button>
							<button class="btn btn-danger"  onclick="window.location.href='{{ path('firewallrules_delete', { 'id': entity.id }) }}'">Delete</button>

					</td>
										
				</tr>
				

        {% endfor %}
        </tbody>
    </table>

			
            <button class="btn btn-success" onclick="window.location.href='{{ path('firewallrules_new', {'id_chain': id_chain}) }}'">New rule</button>

<div id="myModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<!-- dialog body -->
				<div class="modal-body">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				Hello world!
				</div>
			<!-- dialog buttons -->
			<div class="modal-footer"><button type="button" class="btn btn-primary">OK</button></div>
		</div>
	</div>
</div>

{% endblock %}

