{% if pageCount > 1 %}

    <ul class="pagination btn-xs">


    {% if previous is defined %}
        <li>        
            <a style="cursor:pointer" onclick="requestPage({{previous}})" >&laquo;&nbsp;{{ 'Previous'|trans }}</a>
        </li>
    {% else %}
        <li class="disabled">
            <span>&laquo;&nbsp;{{ 'Previous'|trans }}</span>
        </li>
    {% endif %}


