    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a style="cursor:pointer" onclick="requestPage({{page}})" >{{page}}</a>
            </li>
        {% else %}
            <li class="active">
                <span>{{ page }}</span>
            </li>
        {% endif %}

    {% endfor %}

